.search-bar {
     /*padding-top: 7px;*/
}
.search-bar input {
    /*width:100% !important;*/
}
#search-box,
#inputSearchBox,
#barcode-box {
    float:left;
    margin:10px 10px 0;
    padding:0;
}
#search-box,
#inputSearchBox {
    width:60%;
    margin-right:0;
}
#barcode-box {
    float:right;
    width:32.5%;
    margin-left:0;
}
#search-box #keywordForm,
#inputSearchBox #keywordForm,
#search-box .search-form,
#inputSearchBox .search-form,
#barcode-box .barcode-form {
    /*width: 90%;*/
    /*margin:0 5%;*/
    margin:0;
    padding:0;
    position: relative;
}
#search-box #keywordForm #keyword,
#inputSearchBox #keywordForm #keyword,
#search-box .search-form #keyword,
#inputSearchBox .search-form #keyword,
#barcode-box .barcode-form #scan {
    margin-right: 10px;
}
#search-box #keywordForm #keyword,
#inputSearchBox #keywordForm #keyword,
#search-box .search-form #keyword,
#inputSearchBox .search-form #keyword,
#barcode-box .barcode-form #scan,
#barcode-box .barcode-form #scan span {
    height: 30px;
    line-height: 30px;
}
/* ## Search History & Autocomplete styles */


#searchHistory,
#searchAutocomplete {
    position:absolute;
    top:60px;
    left:0;
    z-index: 1001;
    width: 100%; 
    text-align: center; 
    display:none; 
    padding: 0.5em;
    background:rgba(255,255,255,0.95);
}
#searchHistory {}
#searchAutocomplete {}
#searchHistory #noHistory,
#searchHistory #cancelHistory,
#searchHistory #clearHistory {
  /*display:none; float:center; margin:10px auto;*/
  display:none; 
  float:left; 
  margin:0.5em;
}

#searchProducts {
    display: block;
    position:static;
    top:10px;
    left:0;
    z-index:1001;
    background:#fff;
}

#productCount {}

#searchMarketplace {}

#searchProducts {}
#searchProducts ul,
#searchProducts li {
    list-style:none;
    width:100%;
    clear:both;
}
.searchProductsDesc {float:left;}
.searchProductsDesc {width:60%; text-align:left;}
.searchItemImage {float:left; text-align:right; margin-right:5%;}
.searchItemImage img {width:100px;}
 
.searchItemText {
    font-size: .9em;
    font-weight: 300;
}
.searchItemText a {
    color: #333;
}
.searchItemText p {
    margin: 0;
}
.searchItemPrice {
    font-weight: bold;
}

.searchItemrating {
    font-weight: bold;
}
